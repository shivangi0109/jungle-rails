<h1>Admin::Dashboard#show</h1>
<div class="dashboard-show">
  <div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <p class="card-text">Total number of products present in the database are <%= @products.count %>.</p>
          <%= link_to 'Check it out', admin_products_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <p class="card-text">Total number of categories present in the database are <%= @categories.count %>.</p>
          <%= link_to 'Check it out', admin_products_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
